{
	"env": {
			"commonjs": true,
			"es6": true,
			"node": true,
			"mocha": true
	},
	"parser": "@typescript-eslint/parser",
	"extends": [
		"eslint:recommended",
		"plugin:@typescript-eslint/recommended"
	],
	"parserOptions": {
			"ecmaFeatures": {
					"jsx": true
			},
			"ecmaVersion": 2018,
			"sourceType": "module"
	},
	"plugins": [
		"@typescript-eslint"
	],
	"rules": {
			"comma-spacing": [
					"error",
					{
						"before": false,
						"after": true
					}
			],
			"indent": [
					"error",
					2
			],
			"linebreak-style": [
					"error",
					"unix"
			],
			"quotes": [
					"error",
					"single"
			],
			"semi": "off", 
			"@typescript-eslint/semi": [
				"error"
			],
			"eol-last": [
					"error",
					"always"
			],
			"object-curly-spacing": [
					"error",
					"always"
			],
			"keyword-spacing": [
					"error",
					{
						"before": true,
						"after": true
					}
			],
			"space-infix-ops": [
					"error"
			],
			"brace-style": [
					"error",
					"1tbs"
			],
			"space-before-blocks": [
					"error",
					"always"
			],
			"@typescript-eslint/no-extra-semi": [
				"error"
			]
	}
}